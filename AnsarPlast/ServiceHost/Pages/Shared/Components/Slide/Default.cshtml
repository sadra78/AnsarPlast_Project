@using Microsoft.CodeAnalysis.CSharp
@model List<_01_AnsarPlastQuery.Contracts.Slide.SlideQueryModel>
<!-- Main Slider Start -->
<div class="sticky-header-next-sec ec-main-slider section section-space-pb">
    <div class="ec-slider swiper-container main-slider-nav main-slider-dot">
        <!-- Main slider -->
        <div class="swiper-wrapper">
            @foreach (var slide in Model)
            {
                <div class="ec-slide-item swiper-slide d-flex">
                    <img src="~/ProductPictures/@slide.Picture" alt="@slide.PictureAlt" title="@slide.Title"/>
                    <div class="container align-self-center">
                        <div class="row">
                            <div class="col-xl-6 col-lg-7 col-md-7 col-sm-7 align-self-center">
                                <div class="ec-slide-content slider-animation">
                                    <h1 class="ec-slide-title"> @slide.Heading </h1>
                                    <h2 class="ec-slide-stitle">@slide.Title</h2>
                                    <p>@slide.Text</p>
                                    <a href="@slide.Link" class="btn btn-lg btn-secondary">@slide.BtnText</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="swiper-pagination swiper-pagination-white"></div>
        <div class="swiper-buttons">
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>
</div>
<!-- Main Slider End -->
